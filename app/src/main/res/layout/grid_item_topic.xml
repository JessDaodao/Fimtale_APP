<!-- res/layout/grid_item_topic.xml -->
<com.google.android.material.card.MaterialCardView
    style="@style/Widget.Material3.CardView.Outlined"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:rippleColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 关键改动2：让图片填满卡片上半部分，图片的圆角由 CardView 自动裁剪 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.app.fimtale.ui.ParallaxImageView
                android:id="@+id/coverImageView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="matrix"
                tools:src="@drawable/placeholder_image"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_image_tag"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="著"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_image_tag"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_image_tag"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_image_tag"/>

            </LinearLayout>
        </FrameLayout>

        <!-- 关键改动3：将文字区域放在独立的 LinearLayout 中，保证背景干净 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="小说标题非常长长长长长长" />

            <TextView
                android:id="@+id/authorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="作者名" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wordCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_word_count"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="12k" />

                <TextView
                    android:id="@+id/viewCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/ic_view_count"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="3.5k" />

                <TextView
                    android:id="@+id/commentCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/ic_comment_count"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="128" />

                <TextView
                    android:id="@+id/favoriteCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/ic_star"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="56" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
