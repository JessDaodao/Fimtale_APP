<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory 
        app:title="通用"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="auto_update"
            app:title="自动弹出更新窗口"
            app:defaultValue="true"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            app:key="theme_follow_system"
            app:title="深色模式跟随系统"
            app:defaultValue="true"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            app:key="safe_mode"
            app:title="安全模式"
            app:defaultValue="true"
            app:iconSpaceReserved="false" />

        <Preference
            app:key="logout"
            app:title="退出登录"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="高级"
        app:iconSpaceReserved="false">

        <Preference
            app:key="api_credentials"
            app:title="配置 API 凭据"
            app:summary="配置"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="百宝箱"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="gravity_mode"
            app:title="重力模式"
            app:defaultValue="false"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="关于"
        app:iconSpaceReserved="false">

        <Preference
            app:key="about"
            app:title="关于应用"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>
