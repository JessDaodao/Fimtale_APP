<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory 
        app:title="通用"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="theme_follow_system"
            app:title="深色模式跟随系统"
            app:defaultValue="true"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="API凭据"
        app:iconSpaceReserved="false">

        <Preference
            app:key="api_credentials"
            app:title="设置 API 凭据"
            app:summary="配置 Key 和 Pass"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>
