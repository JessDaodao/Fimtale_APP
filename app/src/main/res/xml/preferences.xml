<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory 
        app:title="通用"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="theme_follow_system"
            app:title="深色模式跟随系统"
            app:defaultValue="true"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="API凭据"
        app:iconSpaceReserved="false">

        <EditTextPreference
            app:key="api_key"
            app:title="Key"
            app:summary="请输入"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="api_pass"
            app:title="Pass"
            app:summary="请输入"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
